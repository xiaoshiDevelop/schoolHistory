        </view>

        <view class="directBtn2"    bind:tap="shangDaHistory_sub2">
         <indexBtn url="/pages/shangDaHistory_sub2/shangDaHistory_sub2" src="../../img/baricon/indexBGC.jpg" text="党史故事2" />
        </view>
      </view>
      <view class="bodyInfo {{currentTab === 3 ? 'bodyCurrent': ''}}">
