            <block wx:for="{{historyList}}" wx:key="index">
              <view class="introduceTitle">{{item.number}}. {{item.title}}</view>
              <view class="introduceText">{{item.text}}</view>
            </block>
        </view>
      </view>
      <view class="bodyInfo {{currentTab === 2 ? 'bodyCurrent': ''}}">
        数据暂无
